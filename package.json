{
    "name": "expenses-fullstack",
    "version": "1.0.0",
    "description": "A fullstack TypeScript application to manage household expenses. This monorepo includes a React frontend with Vite, Express.js backend, JWT authentication, and PostgreSQL database integration. Use 'npm run dev' to start development servers, 'npm run build' to build all applications, and 'npm run start' to run the production build with PM2.",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "turbo run dev",
        "setup": "node scripts/setup-dev.js",
        "build": "turbo run build",
        "test": "turbo run test",
        "lint": "turbo run lint",
        "format": "prettier --config ./.prettierrc --write \"**/*.{ts,tsx}\"",
        "clean": "turbo run clean && rm -rf node_modules"
    },
    "repository": {
        "type": "git",
        "url": "git+https://raptor1989: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@github.com/raptor1989/expenses-fullstack.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "commonjs",
    "bugs": {
        "url": "https://github.com/raptor1989/expenses-fullstack/issues"
    },
    "homepage": "https://github.com/raptor1989/expenses-fullstack#readme",
    "devDependencies": {
        "@types/node": "22.15.21",
        "pm2": "6.0.6",
        "turbo": "2.5.3",
        "typescript": "5.8.3"
    },
    "packageManager": "npm@11.3.0",
    "engines": {
        "node": ">=20.0.0"
    }
}