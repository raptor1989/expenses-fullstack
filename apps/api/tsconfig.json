{
 "compilerOptions": {
        "target": "es6",
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "noUnusedLocals": false,
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowJs": true,
    },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
