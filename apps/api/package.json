{
  "name": "@expenses/api",
  "version": "1.0.0",
  "description": "Express.js backend API for the Expenses Management app",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node --esm src/index.ts",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --config ./.prettierrc --write \"**/*.{ts,tsx}\"",
    "test": "jest",
    "db:migrate": "ts-node --esm src/db/migrate.ts"
  },
  "keywords": [
    "expenses",
    "api",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@expenses/shared": "*",
    "bcryptjs": "3.0.2",
    "cors": "2.8.5",
    "dotenv": "16.5.0",
    "express": "5.1.0",
    "express-validator": "7.2.1",
    "jsonwebtoken": "9.0.2",
    "pg": "8.16.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "3.0.0",
    "@types/cors": "2.8.18",
    "@types/express": "5.0.2",
    "@types/jsonwebtoken": "9.0.9",
    "@types/node": "22.15.21",
    "@types/pg": "8.15.2",
    "eslint": "9.27.0",
    "jest": "29.7.0",
    "nodemon": "3.1.10",
    "rimraf": "6.0.1",
    "ts-jest": "29.3.4",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  }
}
